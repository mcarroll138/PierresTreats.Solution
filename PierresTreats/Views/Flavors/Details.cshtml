@{
    Layout = "_Layout";
}

@model PierresTreats.Models.Flavor;
@using PierresTreats.Models;
@using System.Collections.Generic;

<h2>Flavor Details</h2>
<hr />
<h3>@Html.DisplayNameFor(m => m.Description) : @Html.DisplayFor(m => m.Description)</h3>

@if (@Model.JoinEntities.Count == 0)
{
    <p>This Treat has no associated flavor.</p>
}
else
{
    <h4>This flavor has these treats associated with it:</h4>
    <ul>

    @foreach (FlavorTreat join in Model.JoinEntities)
        {
            <li>@join.Treat.Name</li>
            @using (Html.BeginForm("DeleteJoin", "Treats"))
            {
                @Html.Hidden("joinId", @join.FlavorTreatId)
                <input type="submit" value="Delete" />
            }
        }
    </ul>
}
</ul>

@Html.ActionLink("Edit Flavor", "Edit", new { id = Model.FlavorId})
<br>
@Html.ActionLink("Tag a treat to this flavor", "AddTreat", new { id = Model.FlavorId }) to @Html.DisplayFor(m =>
m.Description)
<br>
@Html.ActionLink("Add Flavor", "Create", "Flavors")
<br>
@Html.ActionLink("Add Flavor to your list", "Create")
<br>
@Html.ActionLink("Delete Flavor", "Delete", new { id = Model.FlavorId})
