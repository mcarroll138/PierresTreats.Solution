@{
    Layout = "_Layout";
}

@using PierresTreats.Models

<h1>Flavor Description List:</h1>

@if (Model.Count == 0)
{
    <h3>No flavors have been added to your systme</h3>
    <p>@Html.ActionLink("Add new flavors", "Create")</p>
}

<ul>
    @foreach (Flavor flavor in Model)
    {
        <li>@Html.ActionLink($"{flavor.Description}", "Details", new { id = flavor.FlavorId})

        </li>
    }
</ul>

<p>@Html.ActionLink("Add new flavors", "Create")</p>